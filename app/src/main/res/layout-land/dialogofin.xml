<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textofinTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/porfin"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/imageViewFin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/fredfinal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/esfuerzoTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/esfuerzo"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tesorosRecogidosTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tesoros"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bonosTesorosTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tesorosbono"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botonfinjugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok" />


    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_weight="0" />

</LinearLayout>