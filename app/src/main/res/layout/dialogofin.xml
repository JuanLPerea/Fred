<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textofinTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Por fin has salido!!"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageViewFin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fredfinal" />

    <TextView
        android:id="@+id/esfuerzoTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bonos por tu esfuerzo: 1000"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tesorosRecogidosTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tesoros recogidos:"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bonosTesorosTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bonos por tesoros:"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/botonfinjugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACEPTAR" />

    <Space
        android:layout_width="400dp"
        android:layout_height="wrap_content" />
</LinearLayout>